extends ../template/theme.pug

block head-links
  link(href="/css/socket/style.css", rel="stylesheet")
  script(src="/js/views/test/create.js")
block content
  .col-md-6.col-md-offset-3
    h1.display-4.m-b-2 Create New Project
    div.pname
      form(method="POST")
        div.form-group
          label(for='name') Name:
          input#name.form-control(type='text', placeholder='example name 2' name='name')
        div.form-group2
          label(for='desc') Description:
          textarea#desc.form-control(rows='5', placeholder='what is this project?' name='desc')
        div.form-group3
          label(for='code') Code:
          textarea#code.form-control(rows='15', placeholder='enter matter.js code' name='code')
        br
        button.btn.btn-primary(type='submit', id='sbutton') Next
