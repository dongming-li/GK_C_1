extends ../template/theme.pug

block head-links
block content
  .main.container
    .row
      .col-md-6.col-md-offset-3
        h1.display-4.m-b-2 Signup
        form(method="POST")
          div.form-group
            label(for='email') Email
            input#email.form-control(type='text' placeholder='email' name='email')
          div.form-group
            label(for='password') Password
            input#pass.form-control(type='password' placeholder='password' name='password')
          div.form-group
            label(for='password-confirm') Confirm Password
            input#cpass.form-control(type='password' placeholder='password' name='password-confirm')
          button.btn.btn-primary(type='submit') Create Account
